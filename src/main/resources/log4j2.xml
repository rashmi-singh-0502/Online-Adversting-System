<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="30">
  
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %p %m%n</Property>
        <Property name="APP_LOG_ROOT">c:/temp</Property>
    </Properties>
  
    <Appenders>
  
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
          
        <RollingFile name="debugLog" fileName="${sys:APP_LOG_ROOT}/debug.log"
            filePattern="${sys:APP_LOG_ROOT}/debug-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
          
        <RollingFile name="errorLog" fileName="${sys:APP_LOG_ROOT}/error.log"
            filePattern="${sys:APP_LOG_ROOT}/error-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
          
        <RollingFile name="infoLog" fileName="${sys:APP_LOG_ROOT}/info.log"
            filePattern="${sys:APP_LOG_ROOT}/info-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
         
        <RollingFile name="warnLog" fileName="${sys:APP_LOG_ROOT}/warn.log"
            filePattern="${sys:APP_LOG_ROOT}/warn-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="19500KB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
          
    </Appenders>
  
    <Loggers>
      
        <Logger name="com.cg.oas" additivity="false" level="debug">
            <AppenderRef ref="debugLog" />
            <AppenderRef ref="console"  />
        </Logger>
         
        <Logger name="com.cg.oas" additivity="false" level="info">
            <AppenderRef ref="infoLog" />
            <AppenderRef ref="console" />
        </Logger>
          
        <Logger name="com.cg.oas" additivity="false" level="error">
            <AppenderRef ref="errorLog" />
            <AppenderRef ref="console"/>
        </Logger>
         
        <Logger name="com.cg.oas" additivity="false" level="warn">
            <AppenderRef ref="warnLog" />
            <AppenderRef ref="console"/>
        </Logger>
                  
        <Root level="info">
    		<AppenderRef ref="console"/>
    		<!-- <AppenderRef ref="infoLog"/>
    		<AppenderRef ref="debugLog"/>
    		<AppenderRef ref="warnLog"/>
    		<AppenderRef ref="errorLog"/> -->
    		
		</Root>
  
    </Loggers>
  
</Configuration>